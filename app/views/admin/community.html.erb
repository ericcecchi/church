<div class="row-fluid">
  <%= render 'sidebar' %>
  <div class="span9">
    <h1>Manage Community Groups</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>CGLs</th>
        <th>Members</th>
        <th></th>
      </thead>
      <% CommunityGroup.asc(:name).each do |group| %>
        <tr>
          <td><%= link_to group.name, community_group_path(group.name) %></td>
          <td><%= group.cgls.sort.to_sentence.humanize %></td>
          <td><%= group.users.count %></td>
          <td><%= link_to "Edit", edit_community_group_path(group.name) %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New Group", new_community_group_path, class: 'btn btn-primary' %>
  </div>
</div>
