<div class="row-fluid">
  <%= render 'sidebar' %>
  <div class="span9">
    <h1>Manage Users</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>Roles</th>
        <th></th>
        <th></th>
      </thead>
      <% User.asc(:name).each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.username) %></td>
          <td><%= user.role_ids.sort.to_sentence.humanize %></td>
          <td><%= mail_to user.email, "Email" %></td>
          <td><%= link_to 'Edit', edit_user_path(user.username) %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New User", new_user_path, class: 'btn btn-info' %>
  </div>
</div>
