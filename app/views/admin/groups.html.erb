<div class="row-fluid">
  <div class="span12">
  	<div class="page-header">
	  <%= link_to "New Group", new_group_path, class: 'btn btn-primary pull-right' %>
    <h1>Community Groups</h1>
  	</div>
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Leaders</th>
        <th>Members</th>
      </thead>
      <% Group.where(type:"Community Group").asc(:name).each do |group| %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= group.leaders.join(", ") %></td>
          <td><%= group.users.count %></td>
        </tr>
      <% end %>
    </table>
  	<div class="page-header">
    <h1>Missional Teams</h1>
  	</div>
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Leaders</th>
        <th>Members</th>
      </thead>
      <% Group.where(type:"Missional Team").asc(:name).each do |team| %>
        <tr>
          <td><%= link_to team.name, group_path(team) %></td>
          <td><%= team.leaders.join(", ") %></td>
          <td><%= team.users.count %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
