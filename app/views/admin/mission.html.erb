<div class="row-fluid">
  <%= render 'sidebar' %>
  <div class="span9">
    <h1>Manage Missional Teams</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>MTL</th>
        <th>Members</th>
        <th></th>
      </thead>
      <% MissionalTeam.all.sort.each do |team| %>
        <tr>
          <td><%= link_to team.name, missional_team_path(team) %></td>
          <td><%= team.mtls.sort.to_sentence.humanize %></td>
          <td><%= team.users.count %></td>
          <td><%= link_to "Edit", missional_team_edit_path(team) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
