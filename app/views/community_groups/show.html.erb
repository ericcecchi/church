<h1>Community Group</h1>

<p>
  <b>Name</b><br>
  <%= @community_group.name %>
</p>

<p>
  <b>Members</b><br>
  <ul>
  <% @community_group.members.each do |member| %>
  <li><%= member.name %></li>
  <% end %>
  </ul>
</p>

<div class="form-actions">
  <%= link_to 'Back', manage_community_groups_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_community_group_path(@community_group), :class => 'btn' %>
  <%= link_to 'Delete', community_group_path(@community_group), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
